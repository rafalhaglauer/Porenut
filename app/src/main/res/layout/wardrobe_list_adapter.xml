<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/txtWardrobeSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tool:text="DSG" />

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/txtWardrobeWidthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:text="@string/l_width"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/txtWardrobeWidth"
        app:layout_constraintTop_toTopOf="@id/txtWardrobeWidth"
        app:layout_constraintBottom_toBottomOf="@id/txtWardrobeWidth" />

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/txtWardrobeHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="italic"
        android:text="@string/l_height"
        android:textAllCaps="true"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/txtWardrobeWidthLabel"
        app:layout_constraintTop_toTopOf="@id/txtWardrobeHeight"
        app:layout_constraintBottom_toBottomOf="@id/txtWardrobeHeight" />

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/txtWardrobeDepthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:text="@string/l_depth"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/txtWardrobeWidthLabel"
        app:layout_constraintTop_toTopOf="@id/txtWardrobeDepth"
        app:layout_constraintBottom_toBottomOf="@id/txtWardrobeDepth" />

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/txtWardrobeWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textXLarge"
        tool:text="600"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toStartOf="@id/imgWardrobeType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtWardrobeHeight" />

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/txtWardrobeHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textXLarge"
        tool:text="700"
        app:layout_constraintStart_toStartOf="@id/txtWardrobeWidth"
        app:layout_constraintTop_toBottomOf="@id/txtWardrobeWidth"
        app:layout_constraintBottom_toTopOf="@id/txtWardrobeDepth" />

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/txtWardrobeDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textXLarge"
        tool:text="400"
        app:layout_constraintStart_toStartOf="@id/txtWardrobeWidth"
        app:layout_constraintTop_toBottomOf="@id/txtWardrobeHeight"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imgWardrobeType"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>