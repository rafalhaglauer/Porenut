<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/contentRelativeCompositionDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/l_name"
            android:textSize="@dimen/textSmall" />

        <TextView
            android:id="@+id/txtRelativeCompositionName"
            style="@style/Text.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium" />

        <include layout="@layout/view_divider" />

        <TextView
            style="@style/Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Typ wartości odniesienia dla X"
            android:textSize="@dimen/textSmall" />

        <TextView
            android:id="@+id/txtXReferenceLength"
            style="@style/Text.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium" />

        <include layout="@layout/view_divider" />

        <TextView
            style="@style/Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Typ wartości odniesienia dla Y"
            android:textSize="@dimen/textSmall" />

        <TextView
            android:id="@+id/txtYReferenceLength"
            style="@style/Text.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressRelativeCompositionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/btnActionRelativeCompositionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:sdMainFabClosedSrc="@drawable/ic_add" />

</merge>