<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/wardrobeSectionFragment">

    <fragment
        android:id="@+id/wardrobeCollectionSectionFragment"
        android:name="com.wardrobes.porenut.ui.wardrobe.group.WardrobeGroupFragment" />

    <fragment
        android:id="@+id/wardrobeSectionFragment"
        android:name="com.wardrobes.porenut.ui.wardrobe.group.WardrobeGroupFragment">

        <action
            android:id="@+id/wardrobeSectionToWardrobeTab"
            app:destination="@id/wardrobeTabFragment" />

    </fragment>

    <fragment
        android:id="@+id/drillingSectionFragment"
        android:name="com.wardrobes.porenut.ui.composition.group.RelativeCompositionGroupFragment">

        <action
            android:id="@+id/drillingSectionToRelativeCompositionTab"
            app:destination="@id/relativeCompositionTabFragment" />

    </fragment>

    <fragment
        android:id="@+id/wardrobeTabFragment"
        android:name="com.wardrobes.porenut.ui.wardrobe.detail.WardrobeTabFragment">

        <action
            android:id="@+id/wardrobeTabToElementTab"
            app:destination="@id/elementTabFragment" />

    </fragment>

    <fragment
        android:id="@+id/elementTabFragment"
        android:name="com.wardrobes.porenut.ui.element.detail.ElementTabFragment" />

    <fragment
        android:id="@+id/relativeDrillingGroupFragment"
        android:name="com.wardrobes.porenut.ui.drilling.relative.group.RelativeDrillingGroupFragment" />

    <fragment
        android:id="@+id/relativeCompositionTabFragment"
        android:name="com.wardrobes.porenut.ui.composition.detail.RelativeCompositionTabFragment" />

</navigation>